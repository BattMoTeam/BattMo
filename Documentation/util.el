(defun convert-to-attribute ()
  (interactive)
  (re-search-forward (rx (group (1+ (any word))) (0+ space) "%" (0+ space) (group (0+ nonl))))
  (let ((att (match-string 1))
        (com (match-string 2))
        )
    (beginning-of-line)
    (kill-line)
    (insert "   .. attribute:: " att "\n\n")
    (insert "      " com "\n")
    )
  )

