{
  "$id": "file://./TimeStepping.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Input for the time stepping",
  "type": "object",

  "properties" : {
    "TimeStepping" : {
      "type" : "object",
      "properties" : {
        "totalTime" : {"type" : "number"},
        "timeStepDuration" : {"type" : "number"},
        "numberOfTimeSteps" : {"type" : "integer"},
        "useRampup" : {"type" : "boolean"},
        "rampupTime" : {"type" : "number"}},
      "oneOf" : [{"required" : ["numberOfTimeSteps", "totalTime"]},
                 {"required" : ["timeStepDuration"]}]
    }
  }
}
