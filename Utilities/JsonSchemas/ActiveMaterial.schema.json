{
  "$id": "file://battmo/schemas/ActiveMaterial",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Active Material",
  "type": "object",

  "allOf": [{"$ref": "ElectronicComponent"},
            {"properties" : { "Interface": {"$ref" : "Interface"},
                              "SolidDiffusion": {"$ref" : "SolidDiffusionModel"},
                              "diffusionModelType" : {"type" : "string",
                                                      "enum" : ["full", "simple"]},
                              "electronicConductivity": {
                                "$ref": "#/definitions/PhysicalQuantity",
                                "properties" : { "rdf_type" : {"const" : "htttp://emmo.info/UUID"}},
                                "description": "the electronic conductivity of the material",
                                "symbol": "sigma"
                              },
                              "density" : {
                                "$ref": "#/definitions/PhysicalQuantity",
                                "description": "the mass density of the material",
                                "symbol": "rho"
                              },
                              "bruggemanCoefficient" : {
                                "$ref": "#/definitions/PhysicalQuantity",
                                "description": "the Bruggeman coefficient for effective transport in porous media",
                                "symbol": "beta"
                              },
                              "massFraction" : {
                                "$ref": "#/definitions/PhysicalQuantity",
                                "description": "the ratio of the mass of the material to the total mass of the phase or mixture",
                                "symbol": "gamma"
                              }
                            }
            }
           ],
  
  
  "required" : ["Interface"],
  
  "anyOf" : [ {"properties" : {"diffusionModelType" : {"const" : "full"},
                               "SolidDiffusion" : {"$ref" : "FullSolidDiffusionModel"}}
              },
              {"properties" : {"diffusionModelType" : {"const" : "simple"},
                               "SolidDiffusion" : {"$ref" : "SimplifiedSolidDiffusionModel"}}
              }
            ]
}
