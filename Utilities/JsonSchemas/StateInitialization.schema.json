{
  "$id": "file://./StateInitialization.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Input to setup the initial state of the battery",
  "type": "object",
  "properties": {
    "initializationSetup": {
      "type": "string",
      "enum": [
        "given SOC",
        "given input"
      ]
    },
    "initT": {
      "$ref": "PhysicalQuantity.schema.json",
      "description": "Initial temperature"
    },
    "SOC": {
      "$ref": "PhysicalQuantity.schema.json",
      "description": "Initial state of charge"
    },
    "loadStateCmd": {
      "type": "string",
      "description": "string that when run by matlab eval function return the initial state in the structure initstate"
    }
  },
  "allOf": [
    {"if": {
      "properties": {
        "initializationSetup": {
          "const":"given SOC"}
        },
        "required": ["initializationSetup"]
      },


    "then": {
      "required": [
        "SOC"
      ]
    }
  },
  {"if": {
    "properties": {
      "initializationSetup": {
        "const":"given input"}
      },
      "required": ["initializationSetup"]
    },


  "then": {
    "required": [
      "loadStateCmd"
    ]
  }
}],

  "required": [
    "initT", "initializationSetup"
  ]
}