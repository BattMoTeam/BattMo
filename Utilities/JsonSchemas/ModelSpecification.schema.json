{
  "$id": "file://./ModelSpecification.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Overall model specification. Choice of physics and component that will be included in the model",
  "type": "object",
  "properties": {
    "include_current_collectors": {
      "type": "boolean"
      "description" : "include current collector. Default it false"
    },
    "use_thermal": {
      "type": "boolean"
      "description": "include thermal effects. Default is false"
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "use_thermal": {
            "const": true
          }
        },
        "required": [
          "use_thermal"
        ]
      },
      "then": {
        "required": [
          "ThermalModel"
        ]
      }
    },
    {
      "if": {
        "properties": {
          "include_current_collectors": {
            "const": true
          }
        }
      },
      "then": {
        "anyOf": [
          {
            "properties": {
              "NegativeElectrode": {
                "required": [
                  "CurrentCollector"
                ]
              }
            }
          },
          {
            "properties": {
              "PositiveElectrode": {
                "required": [
                  "CurrentCollector"
                ]
              }
            }
          }
        ]
      }
    }
  ]
}
