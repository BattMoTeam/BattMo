{
    "$id": "file://battmo/schemas/Coating",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Coating",
    "type": "object",
  
    "allOf": [{"$ref": "ElectronicComponent"},
              {"properties" : { "ActiveMaterial": {"$ref" : "ActiveMaterial"},
                                "Binder": {"$ref" : "Binder"},
                                "ConductingAdditive": {"$ref" : "ConductingAdditive"},
                                "density" : {
                                  "$ref": "#/definitions/PhysicalQuantity",
                                  "description": "the mass density of the material",
                                  "symbol": "rho"
                                },
                                "bruggemanCoefficient" : {
                                  "$ref": "#/definitions/PhysicalQuantity",
                                  "description": "the Bruggeman coefficient for effective transport in porous media",
                                  "symbol": "beta"
                                }
                              }
              }
             ],
    
    
    "required" : ["ActiveMaterial"]
  }
  
